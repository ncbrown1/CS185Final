<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.widget.Toolbar
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:title="My Game Title"
                android:subtitle="2 Hours 15 Minutes Remaining"
                android:clickable="false"
                android:duplicateParentState="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/line"
                android:background="@android:color/darker_gray"
                android:layout_below="@id/title"
                android:layout_marginBottom="5dp"
                android:clickable="false"
                android:duplicateParentState="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Players (Current / Max):"
                android:id="@+id/num_players_label"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_below="@+id/line"
                android:soundEffectsEnabled="true"
                android:focusable="true"
                android:clickable="false"
                android:duplicateParentState="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="17 / 20"
                android:id="@+id/num_players"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_below="@+id/line"
                android:soundEffectsEnabled="true"
                android:focusable="true"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Max # Lives:"
                android:id="@+id/num_lives_label"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_below="@+id/num_players_label"
                android:soundEffectsEnabled="true"
                android:focusable="true"
                android:clickable="false"
                android:duplicateParentState="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="3"
                android:id="@+id/num_lives"
                android:paddingStart="10dp"
                android:paddingEnd="30dp"
                android:layout_below="@+id/num_players"
                android:soundEffectsEnabled="true"
                android:focusable="true"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Max Score:"
                android:id="@+id/max_score_label"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_below="@+id/num_lives_label"
                android:soundEffectsEnabled="true"
                android:focusable="true"
                android:clickable="false"
                android:duplicateParentState="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="15"
                android:id="@+id/max_score"
                android:paddingStart="10dp"
                android:paddingEnd="30dp"
                android:layout_below="@+id/num_lives"
                android:soundEffectsEnabled="true"
                android:focusable="true"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>